# 환경 설정
# 배포 환경에서는 "production"으로 설정
ENVIRONMENT=development

# 로컬 DB 사용 여부
# true: 로컬 데이터베이스 연결 정보 사용
# false 또는 비어있음: DATABASE_URL 환경 변수 사용
USE_LOCAL_DB=true

# 로컬 데이터베이스 연결 정보 (USE_LOCAL_DB=true인 경우에만 사용)
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=your_password
DB_NAME=anymodb

# 배포 환경 데이터베이스 URL (USE_LOCAL_DB가 true가 아닌 경우에만 사용)
DATABASE_URL=postgres://username:password@host:port/database_name

# 서버 포트 설정 (비어있으면 8080 사용)
PORT=8080 